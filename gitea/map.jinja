# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with  defaults from defaults.sls ##}
{% import_yaml 'gitea/defaults.yaml' as default_settings %}

{##
Setup variable using grains['os_family'] based logic, only add key:values here
that differ from whats in defaults.yaml
##}
{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': { },
        'RedHat': { },
  }
  , grain="os_family"
  , merge=salt['pillar.get']('gitea:lookup'))
%}
{## Merge the flavor_map to the default settings ##}
{% do default_settings.gitea.update(os_family_map) %}

{## Merge in gitea:lookup pillar ##}
{% set gitea = salt['pillar.get'](
    'gitea',
    default=default_settings.gitea,
    merge=True
  )
%}
